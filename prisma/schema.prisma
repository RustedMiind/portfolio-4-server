// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User{
  id String @id @unique() @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique()
  hash String
  salary Int @default(35000)
  shifts Shift[]
  firstName String?
  lastName String?
  role Role? @relation(fields: [roleId], references: [id])
  roleId String?
  profileImage String?
}


model Permission {
  id String @id @unique() @default(uuid())
  name String @unique
  showName String? @unique
  roles Role[]
}

model Role {
  id String @id @unique() @default(uuid())
  name String @unique
  permissions Permission[]
  users User[]
}

model KeyValue{
  key String @id @unique()
  value String @db.VarChar(500)
}

model Tool{
  id String @id @unique() @default(uuid())
  name String @unique
  link String
  experiences Experience[]
  projects Project[]
}

model Project{
  id String @id @unique() @default(uuid())
  name String @unique
  description String
  image String?
  link String
  experienceId String?
  tools Tool[]
  experience Experience? @relation(fields: [experienceId],references: [id])
  featured Boolean @default(false)
}

model Experience{
  id String @id @unique() @default(uuid())
  title String
  description String
  start_date DateTime
  end_date DateTime?
  tools Tool[]
  org_name String
  projects Project[]
  featured Boolean @default(false)
}

model Shift{
  id Int @id @default(autoincrement())
  userId String
  user User @relation(fields: [userId],references: [id])
  startDate DateTime
  endDate DateTime
  totalHours Float
  pay Float
}

model Mails {
  id String @id @unique() @default(uuid())
  createdAt DateTime @default(now())
  sender_name String
  sender_email String
  org_name String?
  subject String
  body String
}